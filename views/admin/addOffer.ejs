<%-include ('../layouts/adminHeader') %>
    <%-include ('../partials/adminSidebar') %>
<div class="container">

    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="text-center pt-5">
                                <h1 class="h3 font-weight-bold cl1">Add New Offer</h1>
                            </div>
                            <div class="p-5">
                                <form class="user" action="../admin/postAddOfferBox" method="post"  enctype="multipart/form-data">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="form-group">
                                                <div class="mb-2 ml-3 cl2"><span>Name</span></div>
                                                <input type="text" class="form-control form-control-user"
                                                    id="exampleFirstName" placeholder="Enter Name"
                                                    name="name" required>
                                            </div>
                                            <div class="form-group">
                                                <div class="mb-2 ml-3 cl2"><span>Link</span></div>
                                                <input type="text" class="form-control form-control-user"
                                                    id="exampleFirstName" placeholder="Enter Link"
                                                    name="link">
                                            </div>
                                            <div class="form-group row">
                                                <div class="col-sm-6 mb-2 mb-sm-0">
                                                    <div class="mb-2 ml-3 cl2"><span>Price</span></div>
                                                    <input type="text" class="form-control form-control-user"
                                                        id="exampleLastName altText" placeholder="Enter Offer price"
                                                        name="price">
                                                </div>
                                                <div class="col-sm-6">
                                                    <div class="mb-2 ml-3 cl2"><span>Image</span></div>
                                                    <input type="file" class="form-control form-control-user"
                                                        id="fileupload" placeholder="Upload Image"
                                                        name="image" required>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                    <hr>
                                    <button type="submit" class="btn bg1 text-white hov-btn1 btn-user btn-block">
                                        Save Changes
                                    </button>
                                </form>
                            </div>
                        </div>
                        <div class="col-lg-5">
                            <form>
                        </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%-include ('../layouts/adminFooter') %>